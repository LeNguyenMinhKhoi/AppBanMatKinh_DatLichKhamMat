<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anh_giohang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@drawable/sp1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tensp_giohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên sản phẩm"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/giasp_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá sản phẩm"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/soluong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:gravity="end"
                    android:textSize="12dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_xoasanpham"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Xóa sản phẩm"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/mau_xanhnhat"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>